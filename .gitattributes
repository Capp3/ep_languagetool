*.mov binary
*.flv binary
*.webm binary

# -----------------------------------------------------------------------------
# Merge Strategies
# -----------------------------------------------------------------------------

# Automatically resolve conflicts by keeping both versions
README.md merge=union
CHANGELOG.md merge=union
CONTRIBUTORS.md merge=union

# Package locks - Use ours strategy (prefer local changes)
package-lock.json merge=ours
yarn.lock merge=ours
poetry.lock merge=ours
Pipfile.lock merge=ours
Gemfile.lock merge=ours

# -----------------------------------------------------------------------------
# Diff Settings
# -----------------------------------------------------------------------------

# Better diff for specific file types
*.ipynb diff=jupyternotebook
*.md diff=markdown
*.py diff=python
*.rb diff=ruby
*.php diff=php

# -----------------------------------------------------------------------------
# Linguist Overrides (for GitHub language statistics)
# -----------------------------------------------------------------------------

# Documentation - Don't count towards language stats
*.md linguist-documentation
*.txt linguist-documentation
docs/** linguist-documentation

# Vendored code - Don't count towards language stats
vendor/** linguist-vendored
node_modules/** linguist-vendored
third_party/** linguist-vendored

# Generated code - Don't count towards language stats
*.min.js linguist-generated
*.min.css linguist-generated
dist/** linguist-generated
build/** linguist-generated
coverage/** linguist-generated

# -----------------------------------------------------------------------------
# Export Ignore (files not included in archives)
# -----------------------------------------------------------------------------

.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
.github/ export-ignore
tests/ export-ignore
*.test.* export-ignore
*.spec.* export-ignore
.vscode/ export-ignore
.idea/ export-ignore
